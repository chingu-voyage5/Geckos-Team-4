{
    // required by all chrome extensions
    "name": "Raftaar",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
    "scripts": ["background.js"],
    "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    // optional
    "description": "Better Momentum Tab Tool",
    // add icons later

    "browser_action": {
        "default_title": "Raftaar"
    },

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" },

    "permissions": [
        "activeTab", "tabs", "geolocation"
    ]
}
